<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BaseWeapon" Name="RVFFA_BaseAvaliGun" Abstract="True">
        <techLevel>Industrial</techLevel>
        <smeltable>true</smeltable>
        <thingCategories>
            <li>WeaponsRanged</li>
        </thingCategories>
        <inspectorTabs>
            <li>ITab_Art</li>
        </inspectorTabs>
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <Flammability>0.5</Flammability>
        </statBases>
        <comps>
            <li Class="CompProperties_Art">
                <nameMaker>NamerArtWeaponGun</nameMaker>
                <descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
                <minQualityForArtistic>Excellent</minQualityForArtistic>
            </li>
            <li>
                <compClass>CompQuality</compClass>
            </li>
        </comps>
    </ThingDef>

    <ThingDef Name="RVFFA_WeaponMakeableLathe" ParentName="RVFFA_BaseAvaliGun" Abstract="True">
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Smith</soundWorking>
            <recipeUsers>
                <li>RVFFA_NanoForge</li>
            </recipeUsers>
            <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
            <researchPrerequisite>Gunsmithing</researchPrerequisite>
        </recipeMaker>
    </ThingDef>

    <ThingDef ParentName="BaseBullet">
        <defName>RVFFA_PistolBullet</defName>
        <label>Bullet</label>
        <graphicData>
            <texPath>RimValiFFA/Things/Weapons/Guns/Bullet/SmallBullet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile>
            <damageDef>Bullet</damageDef>
            <damageAmountBase>8</damageAmountBase>
            <stoppingPower>0.5</stoppingPower>
            <speed>150</speed>
            <armorPenetrationBase>0.185</armorPenetrationBase>
        </projectile>
    </ThingDef>

    <ThingDef ParentName="RVFFA_WeaponMakeableLathe">
        <defName>RVFFA_IlluminatePistol</defName>
        <label>Illuminate Pistol</label>
        <description>A common Illuminate pattern pistol. Unlike its Terran counterparts this weapon uses coil-based acceleration. Whilst It has more accuracy and a shorter travel time than a Terran auto pistol, it hits with less power when compared to one.</description>

        <graphicData>
            <texPath>RimValiFFA/Things/Weapons/Guns/Pistol</texPath>
        </graphicData>

        <uiIconScale>1.4</uiIconScale>

        <statBases>
            <WorkToMake>4500</WorkToMake>
            <Mass>1.5</Mass>
            <AccuracyTouch>0.87</AccuracyTouch>
            <AccuracyShort>0.92</AccuracyShort>
            <AccuracyMedium>0.77</AccuracyMedium>
            <AccuracyLong>0.55</AccuracyLong>
            <RangedWeapon_Cooldown>1.2</RangedWeapon_Cooldown>
        </statBases>

        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>AvaliPistolBullet</defaultProjectile>
                <warmupTime>0.3</warmupTime>
                <range>29.9</range>
                <soundCast>Shot_Autopistol</soundCast>
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>0</muzzleFlashScale>
                <ticksBetweenBurstShots>2</ticksBetweenBurstShots>
                <burstShotCount>1</burstShotCount>
            </li>
        </verbs>

        <tools>
            <li>
                <label>grip</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>1.8</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>1.8</cooldownTime>
            </li>
        </tools>

        <costList>
            <Steel>10</Steel>
            <ComponentIndustrial>3</ComponentIndustrial>
            <RVFFA_ProcessedTungsten>5</RVFFA_ProcessedTungsten>
        </costList>

        <recipeMaker>
            <skillRequirements>
                <Crafting>2</Crafting>
            </skillRequirements>
        </recipeMaker>
    </ThingDef>
</Defs>