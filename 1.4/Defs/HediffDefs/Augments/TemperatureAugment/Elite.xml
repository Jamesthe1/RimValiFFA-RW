<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="RVFFA_BasicBionicPartBase">
		<defName>RVFFA_EliteTempControl</defName>
		<graphicData>
			<texPath>RimValiFFA/Things/Cybernetics/Torso</texPath>
