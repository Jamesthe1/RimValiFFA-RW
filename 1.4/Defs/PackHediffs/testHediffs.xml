<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef ParentName="DiseaseBase">
		<defName>BOT_ClaustrophobicBreakdown</defName>
		<label>claustrophobic breakdown</label>
		<labelNoun>a claustrophobic breakdown</labelNoun>
		<description>A severe amalgamation of symptoms due to claustrophobia. May include sweating, rapid heartbeat, confusion and disorientation as well as the fear of dying.</description>
		<isBad>false</isBad>
		<makesSickThought>false</makesSickThought>
		<tendable>false</tendable>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.5</setMax>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<setMax>0.2</setMax>
					</li>
					<li>
						<capacity>Talking</capacity>
						<setMax>0.0</setMax>
					</li>
					<li>
						<capacity>Eating</capacity>
						<setMax>0.25</setMax>
					</li>
					<li>
						<capacity>Sight</capacity>
						<setMax>0.1</setMax>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<setMax>0.1</setMax>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<setMax>0.75</setMax>
					</li>
				</capMods>
				<vomitMtbDays>0.5</vomitMtbDays>
				<lifeThreatening>false</lifeThreatening>
				<hungerRateFactor>1.2</hungerRateFactor>
				<restFallFactor>1.5</restFallFactor>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>BOT_CongenitalAnalgesiaPainReducer</defName>
		<label>can't feel pain</label>
		<labelNoun>a claustrophobic breakdown</labelNoun>
		<description>alagesia can't feel pain</description>
		<isBad>false</isBad>
		<makesSickThought>false</makesSickThought>
		<tendable>false</tendable>
		<makesAlert>false</makesAlert>
		<chronic>true</chronic>
		<stages>
			<li>
				<becomeVisible>false</becomeVisible>
				<lifeThreatening>false</lifeThreatening>
				<painFactor>0</painFactor>
			</li>
		</stages>
	</HediffDef>
</Defs>
